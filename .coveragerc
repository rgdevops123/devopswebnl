# .coveragerc to control coverage.py
[run]
branch = True

[report]
# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Ignore logging
    logger
    configure_logs

    # Ignore catch all Exceptions
    except Exception as e:

ignore_errors = True

[html]
directory = coverage_html_report
